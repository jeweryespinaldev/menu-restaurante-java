import javax.swing.*;
import java.util.Scanner;

public class condicional_if_NOT {
    public static void main(String[] args) {

       double subtotal;
       boolean socio;
       boolean pagoEfectivo;
       boolean cupon;
       boolean cliente;
       boolean compraGrande;
       double resultado;
       double resultado2;
       double descuentoCupon=0.20;
       double resultado3;
       double resultado4;
       double descuentoSocioEfectivo=0.15;
       double resultado5;
       double resultado6;
       double descuentoCliente=0.12;
       double resultado7;
       double resultado8;
       double descuentoCompra=0.05;

       //ENTRADA DE DATOS

       Scanner leer = new Scanner(System.in);
        System.out.println("ponga su subtotal");
        subtotal = leer.nextDouble();
        System.out.println("eres socio?");
        socio = leer.nextBoolean();
        System.out.println("pagaras en efectivo?");
        pagoEfectivo = leer.nextBoolean();
        System.out.println("tienes cupon?");
        cupon = leer.nextBoolean();
        System.out.println("eres un cliente frecuente?");
        cliente = leer.nextBoolean();
        System.out.println("su compra es grande?");
        compraGrande = leer.nextBoolean();

        //CALCULOS DE DECUENTOS

        //cupon de 20%
        resultado=subtotal * descuentoCupon;
        resultado2=subtotal - resultado;

        //socio + efectivo 15%

        resultado3=subtotal * descuentoSocioEfectivo;
        resultado4=subtotal - resultado3;

        //cliente frecuente 12%
        resultado5=subtotal *descuentoCliente;
        resultado6=subtotal - resultado5;

        //compra grande 5%
        resultado7=subtotal *descuentoCompra;
        resultado8=subtotal - resultado7;

        //ANALISIS DE DATOS
        if (cupon){
            System.out.println("por tener un cupon le daremos un 20% de descuento, su total a pagar seria de "+resultado2+"\n"+
                               "subtotal "+subtotal+"\n"+
                               "descuento "+resultado+"\n"+
                               "total a pagar "+resultado2+"\n");

        }else if (socio && pagoEfectivo){
            System.out.println(" por se socio y pagar en efectvo tendras un 15% de dscuento, su total a pagar seria de "+resultado4+"\n"+
                               "subtotal "+subtotal+"\n"+
                               "descuento "+resultado3+"\n"+
                               "total a pagar "+resultado4+"\n");

        }else if (cliente){
            System.out.println("por ser un cliente frecuente te daremos un 12& de descuento, su total a pagar seria "+resultado6+"\n"+
                               "subtotal "+subtotal+"\n"+
                                "descuento "+resultado5+"\n"+
                                 "total a pagar "+resultado6+"\n");

        }else if (compraGrande){
            System.out.println("por su compra grande le daremos un 5% de descuento, su total a pagar seria "+resultado8+
                               "subtotal "+subtotal+"\n"+
                               "descuento "+resultado7+"\n"+
                                "total a pagar "+resultado8);

        }else{
            System.out.println("gracias por tu compraðŸ˜Š");
        }






    }




}